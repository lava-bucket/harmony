{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ]
}
